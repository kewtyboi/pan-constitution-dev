{
  "name": "{{PROJECT_SLUG}}",
  "version": "1.0.0",
  "description": "{{PROJECT_DESCRIPTION}}",
  "scripts": {
    "docs:index": "node scripts/generate-docs-index-v2.js",
    "docs:index:output": "node scripts/generate-docs-index-v2.js --output",
    "lint:md": "markdownlint '**/*.md' --ignore node_modules --ignore .git",
    "lint:spelling": "cspell '**/*.md' --no-progress",
    "format": "prettier --write '**/*.{md,json,yml,yaml}'",
    "format:check": "prettier --check '**/*.{md,json,yml,yaml}'",
    "validate": "npm run lint:md && npm run lint:spelling && npm run validate:frontmatter && npm run validate:links",
    "validate:frontmatter": "node scripts/validate-frontmatter.js",
    "validate:links": "node scripts/validate-links.js",
    "hooks:setup": "bash scripts/setup-pre-commit.sh",
    "preinstall": "node -e \"if (process.env.CI !== 'true') console.log('\\nðŸ’¡ Run \\\"npm run hooks:setup\\\" after install to enable Git hooks\\n')\""
  },
  "repository": {
    "type": "git",
    "url": "{{PROJECT_REPOSITORY_URL}}"
  },
  "keywords": [
    "pan-constitution",
    "ai-agents",
    "documentation",
    "governance"
  ],
  "author": "{{PROJECT_TEAM}}",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "cspell": "^8.0.0",
    "js-yaml": "^4.1.0",
    "markdownlint-cli": "^0.39.0",
    "prettier": "^3.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

